@model Model.EF.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #mapCanvas {
        height: 600px;
    }
</style>
<link href="~/assets/admin/js/plugins/toastr/toastr.min.css" rel="stylesheet" />
@section jsFooter{
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="~/assets/admin/js/plugins/toastr/toastr.min.js"></script>
    <script src="/assets/client/js/controller/contactController.js"></script>

}
<div class="contact-form">
    <div class="col-md-6 contact-grid">
        <h4>Contact form</h4>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p class="your-para">Your Name</p>
            <input type="text" value="" required name="name" id="txtName">
            <p class="your-para">Your Phone number</p>
            <input type="text" value="" required name="mobile" id="txtMobile">
            <p class="your-para">Your address</p>
            <input type="text" value="" required name="address" id="txtAddress">
            <p class="your-para">Your email</p>
            <input type="text" value="" required name="email" id="txtEmail">
            <p class="your-para">Your Message</p>
            <textarea cols="77" rows="6" value=" " required name="content" id="txtContent"></textarea>
            <div class="send">
                <input type="button" value="Send" id="btnSend" class="btn btn-primary">
            </div>
        }

    </div>
    <div class="col-md-6 contact-in">

        <div class="map">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d37494223.23909492!2d103!3d55!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x453c569a896724fb%3A0x1409fdf86611f613!2sRussia!5e0!3m2!1sen!2sin!4v1415776049771"></iframe>
        </div>
        <h4>Contact information</h4>
        <div class="more-address">
            <div class="address-more">
                <p>The company name,</p>
                <p>Lorem ipsum dolor,</p>
                <p>Glasglow Dr 40 Fe 72. </p>
            </div>
            <div class="address-left">
                <p>Tel:1115550001</p>
                <p>Fax:190-4509-494</p>
                <p>Email: <a href="mailto:info@example.com">info@example.com</a></p>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>
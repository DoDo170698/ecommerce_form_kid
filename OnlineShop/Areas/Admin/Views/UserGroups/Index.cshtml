@model PagedList.IPagedList<Model.EF.UserGroup>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<h2>Nhóm người dùng</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="/admin/usergroups/create">Tạo mới</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Tên nhóm</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.ID">
                    <td>@item.Name</td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })|*@
                        <a href="/admin/usergroups/Edit?id=@item.ID">Xem</a>|
                        <a href="/admin/usergroups/Details?id=@item.ID">Chi tiết</a>|
                        <a href="/admin/usergroups/delete?id=@item.ID">Xóa</a>|
                        <a href="/admin/usergroups/authozationgroup?groupId=@item.ID">Phân quyền</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>
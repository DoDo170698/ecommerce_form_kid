@model Model.EF.ProductCategory
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section jsFooter{
    <script src="/assets/admin/js/controller/productCategoryController.js"></script>
}
<h2>Edit</h2>

@using (Html.BeginForm("Edit", "ProductCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" name="Name" placeholder="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="SeoTitle">SeoTitle</label>
        <input type="text" class="form-control" name="SeoTitle" placeholder="SeoTitle" value="@Model.SeoTitle">
    </div>
    <div class="form-group">
        <label for="MetaKeywords">MetaKeywords</label>
        <input type="text" class="form-control" name="MetaKeywords" placeholder="MetaKeywords" value="@Model.MetaKeywords">
    </div>
    <div class="form-group">
        <label for="MetaDescriptions">MetaDescriptions</label>
        <input type="text" class="form-control" name="MetaDescriptions" placeholder="MetaDescriptions" value="@Model.MetaDescriptions">
    </div>
    <div class="form-check">
        <input type="checkbox" value="true" checked="checked" class="form-check-input" name="Status">
        <label class="form-check-label" for="Status">Status</label>
    </div>
    <input hidden name="ID" value="@Model.ID" />
    <button type="submit" class="btn btn-primary">Submit</button>
}


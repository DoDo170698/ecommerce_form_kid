@model PagedList.IPagedList<Model.EF.Category>
@using OnlineShop.Common;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh sách Category
}
@section jsFooter{
    <script src="/assets/admin/js/controller/categoryController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách Category
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.SearchString" class="form-control" name="search" placeholder="Tìm kiếm theo description" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/Category/Create">Thêm mới</a>
                            </div>
                        </div>
                    </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Mô tả</th>                              
                                <th>Ngày đăng</th>
                                <th>Trạng thái</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.Name</td>
                                    <td>@item.MetaTitle</td>                                  
                                    <td>@item.CreatedDate.Value.ToString("dd/MM/yyyy")</td>

                                    <td>
                                        <a href="/Admin/Category/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @id = item.ID }, new AjaxOptions
                                   {
                                       Confirm = "Bạn có muốn xoá bản ghi này?",
                                       //OnComplete = "$('#row_" + @item.ID + "').remove()",
                                       OnComplete = "OnComplete",
                                       HttpMethod = "Delete",
                                       OnFailure = "OnFailse"
                                   }, new { @data_id = item.ID })

                                    </td>
                                    <td>
                                        <a href="javascript:void(0)" class="btn-change-status-category" data-id="@item.ID">
                                            @Html.Raw(item.Status.Value ? "<strong> Active <i class='fa fa-check-circle' aria-hidden='true'></i></strong>" : "<strong style='color: red;'> Lock </strong>")
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
<script>
    function OnComplete(rp) {
        console.log(rp.responseJSON.status);
        var result = $(this).data('id');
        if (rp.responseJSON.status) {
            toastr.success(rp.responseJSON.mess,"Thông báo");
            $('#row_' + result + '').remove();
        } else {
            toastr.success(rp.responseJSON.mess, "Thông báo");
        }
    }
</script>